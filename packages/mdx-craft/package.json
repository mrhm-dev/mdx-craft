{
  "name": "mdx-craft",
  "version": "0.0.1",
  "type": "module",
  "description": "A package for preview and write MDX codes in any React application",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "check-types": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "mdx",
    "react",
    "preview",
    "editor",
    "markdown"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "@mdx-js/mdx": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.0",
    "rehype-highlight": "^7.0.1",
    "rehype-slug": "^6.0.0"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.1.6",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.8.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.49",
    "size-limit": "^11.1.6",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.2.5",
    "tsup": "^8.3.5",
    "typescript": "^5.9.2"
  }
}
